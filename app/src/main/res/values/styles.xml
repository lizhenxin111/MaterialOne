    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="loading" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="shareWindowAnim">
        <item name="android:windowEnterAnimation">@anim/share_window_enter</item>
        <item name="android:windowExitAnimation">@anim/share_window_exit</item>
    </style>
</resources>
